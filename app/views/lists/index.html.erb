

<table class="table table-bordered">
  
  <tbody>
    <div id="lists">
  <% @lists.each do |list| %>
  <% if list.completed %>  
  <tr class="table-secondary">
    <td class="striker"><%= link_to list.description , edit_list_path(list) %><% list.description %></td>
    <td>
      <%= form_for(list) do |form| %>
        <%= form.text_field :description, type: 'hidden' %>
        <%= form.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
         <%= form.submit "Uncross", class: 'btn btn-outline-secondary btn-sm' %>
        <% end %>

    </td>
    <td>
      <% link_to 'Show', list %>
      <center><%= link_to 'Delete', list, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure? '} %></center>
    </td>
   
  </tr>
  <% else %>
    <tr>
      <td><% list.description %> <%= link_to list.description, edit_list_path(list) %></td>
      <td>
        <%= form_for(list) do |form| %>
        <%= form.text_field :description, type: 'hidden' %>
        <%= form.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
         <%= form.submit "Cross Off", class: 'btn btn-outline-secondary btn-sm' %>
        <% end %>
      </td>
      <td>
        <% link_to 'Show', list %>
        <% link_to 'Edit', edit_list_path(list) %>
        <center>
          <%= link_to 'Delete', list, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure? '} %>
          </center>
     </td>
  </tr>
  <% end %>

  <% end %>
</tbody>
</table>
